<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/sample_single_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        />

    <TextView
        android:id="@+id/sample_single_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/sample_single_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="随机获取一张图片"
        />

    <Button
        android:id="@+id/sample_single_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除加载的图片"
        />

    <Button
        android:id="@+id/sample_single_occupy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用占位图获取图片"
        />
  </LinearLayout>

</ScrollView>
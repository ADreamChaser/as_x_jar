<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="活体检测类型"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="随机顺序"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center_vertical"
            android:text="选择活体检测动作"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="眨眨眼"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="张大嘴"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="向上抬头"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="向下低头"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="向左摇头"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="向右摇头"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/settings_liveness_cb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left|center_vertical"
            android:text="摇摇头"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/setting_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="确认修改" />
    </LinearLayout>
</ScrollView>
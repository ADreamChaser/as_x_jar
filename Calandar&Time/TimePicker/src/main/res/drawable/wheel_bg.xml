<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
<!-- 	    滑轮边界下部   ?   滑轮边界上部 -->
 		<shape android:shape="rectangle">
			<gradient
				android:startColor="#f8f8ee"
				android:centerColor="#f8f8ee"
				android:endColor="#f8f8ee"
				android:angle="90" />
				
				<stroke android:width="5dp" android:color="#f8f8ee" />
		</shape>
	</item>
<!-- 	滑轮边框 -->
	<item android:left="1dp" android:right="1dp" android:top="0dp" android:bottom="0dp">
		<shape android:shape="rectangle">
<!-- 		    背景下部 背景中部  背景上部 -->
			<gradient
				android:startColor="#fff"
				android:centerColor="#fff"
				android:endColor="#fff"
				android:angle="90" />
		</shape>
	</item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333">

    <ImageView
        android:id="@+id/page_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonstate_transparent"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="18dp"
        android:src="@drawable/previous"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/page_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonstate_transparent"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="18dp"
        android:src="@drawable/next"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/page_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/page_next"
        android:src="@drawable/rotate"
        android:visibility="gone" />

    <TextView
        android:id="@+id/page_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/page_rotate"
        android:layout_toRightOf="@id/page_previous"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<litepal>

    <!-- 升级只需修改版本号,修改mapping即可，其他都不用自己管 -->

    <dbname value="demolitepal" >
    </dbname>
    <!-- <dbname>用于设定数据库的名字 -->

    <version value="1" >
    </version>
    <!-- <version>用于设定数据库的版本号 -->

    <list>
        <mapping class="org.litepal.learn.other.News" >
        </mapping>

        <mapping class="org.litepal.learn.other.Comment" >
        </mapping>

        <mapping class="org.litepal.learn.other.Introduction" >
        </mapping>

        <mapping class="org.litepal.learn.other.Category" >
        </mapping>
    </list>
    <!-- <list>用于设定所有的映射模型,对应文件类路径 -->

</litepal>